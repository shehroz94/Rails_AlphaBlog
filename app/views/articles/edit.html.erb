<h1>Article Editing</h1>

<% if @article.errors.any? %>
  <h2>Following errors prevented the article from being updated:- </h2>
  <ul>
    <%= @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: @article, local: true) do |f| %>
  <%= f.label :Title%>
  <div>
    <%= f.text_field :title %>
  </div>

  <p></p>
  
  <%= f.label :Description%>
  <div>
    <%= f.text_area :description %>
  </div>

  <%= f.submit %>

<% end %> 

<p></p>
<div>
  <a href="/articles">Return To Article Listing</a>
</div>