<h1>Articles Index Page</h1>


<table>
  <thead>
    <tr>
      <th><strong>Title</strong></th>
      <th><strong>Description</strong></th>
      <th colspan="3"><strong>Actions</strong></th>
    </tr>
  </thead>
  <tbody>
    <%= @articles.each do |articleData| %>
      <tr>
        <td><%=articleData.title%></td>
        <td><%=articleData.description%></td>
        <td>
          <td><a href="/articles/<%=articleData.id%>">show</a></td>
          <td><a href="/articles/<%=articleData.id%>/edit">update</a></td>
          <td><%= link_to 'Delete', article_path(articleData), method: :delete, data: {confirm: "Are you sure?"} %></td>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<p></p>
<div>
  <a href="/articles/new">Add New</a>
</div>

<div>
  <a href="/">Home Page</a>
</div>